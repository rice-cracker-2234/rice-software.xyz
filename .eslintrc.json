{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "extends": [
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],

  "plugins": ["@typescript-eslint", "react", "prettier"],

  "rules": {
    "prettier/prettier": "warn",

    // react
    "react/react-in-jsx-scope": "off"
  }
}
